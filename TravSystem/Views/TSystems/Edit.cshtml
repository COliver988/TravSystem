@model TravSystem.Models.TSystem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit System</h1>

<h4>TSystem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SubSectorId" class="control-label">Subsector</label>
                <select asp-for="SubSectorId" class="form-control" asp-items="@(new SelectList(((IEnumerable<dynamic>)ViewBag.SubSectors).Select(a => new { Id = a.Id, Name = a.Name }), "Id", "Name"))"></select>
                <span asp-validation-for="SubSectorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
