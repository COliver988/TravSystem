@model TravSystem.Models.TSystem

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TSystem</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubSectorId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubSectorId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Bases
        </dt>
        <dd class="col-sm-10">
            @if (Model.Bases != null && Model.Bases.Any())
            {
                <ul>
                    @foreach (var b in Model.Bases)
                    {
                        <li>@b.Name</li>
                    }
                </ul>
            }
            else
            {
                <span>None</span>
            }
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
