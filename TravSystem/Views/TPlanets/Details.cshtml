@using TravSystem.Models
@model TravSystem.Models.TPlanet

@{
    ViewData["Title"] = "Details";
    var tradeClassifications = ViewBag.TradeClassifications as List<TradeClassification>;
}

<h1>Details</h1>

<div>
    <h4>TPlanet</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Subsector
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubSector.Name)
        </dd>
        <dt class="col-sm-2">
            System
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.System.Name)
        </dd>
        <dt class="col-sm-2">
            Satelite of Planet ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TPlanetId)
        </dd>
        <dt class="col-sm-2">
            Planet Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orbit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orbit)
        </dd>
        <dt class="col-sm-2">
            Starport
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Starport.HexCode)  @Html.DisplayFor(model => model.Starport.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="col-sm-2">
            Atmosphere
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Atmosphere.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hydrographics)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hydrographics)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Population)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Population)
        </dd>
        <dt class="col-sm-2">
            Government 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Government.HexCode) @Html.DisplayFor(model => model.Government.Name)
        </dd>
        <dt class="col-sm-2">
            Law Level
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LawLevel.HexCode) @Html.DisplayFor(model => model.LawLevel.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TechLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TechLevel)
        </dd>
        <dt class="col-sm-2">
            UWP
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UWP)
        </dd>
        <dt class="col-sm-2">
            Travel Code
        </dt>
        <dd class="col-sm-10">
            @{
                var travelCodeName = Model.TravelCode?.Name;
                var color = travelCodeName?.ToLower() switch
                {
                    "red" => "red",
                    "amber" => "yellow",
                    "green" => "green",
                    _ => "inherit"
                };
            }
            <span style="color:@color">
                @Html.DisplayFor(model => model.TravelCode.Name)
            </span>
        </dd>
    </dl>
</div>

<h5>Trade Classifications</h5>
<div class="row"
    <ul>
        @if (tradeClassifications != null)
            foreach (var t in tradeClassifications)
            {
                      <li>@t.Name</li>
            }
    </ul>
</div
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="GenerateSystem" asp-route-id="@Model?.Id">Generate System</a> |
    <a asp-action="Index">Back to List</a>
</div>
