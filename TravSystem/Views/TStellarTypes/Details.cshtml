@model TravSystem.Models.TStellarTypes

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TStellarTypes</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
    </dl>
</div>
@if (Model.StellarZones != null && Model.StellarZones.Any())
{
    <h4>Stellar Zones</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Orbit</th>
                <th>Zone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var zone in Model.StellarZones)
            {
                <tr>
                    <td>@zone.Orbit</td>
                    <td>@zone.Zone</td>
                </tr>
            }
        </tbody>
    </table>
}:metaviewport
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
